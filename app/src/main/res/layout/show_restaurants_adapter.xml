<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/glutenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingEnd="60dp"
            android:paddingBottom="10dp"
            android:gravity="start"
            android:textSize="14sp"
            android:textColor="@color/glutenPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <RatingBar
            android:id="@+id/restaurantRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:paddingTop="14dp"
            android:progressTint="@color/glutenPrimaryDark"
            android:secondaryProgressTint="#00000000"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurantVicinity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingEnd="50dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/restaurantOpenNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="11dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</LinearLayout>
